<!-- Add Bootstrap classes -->
<section class="categories-container container mt-4">
  <h2 class="text-center">CATEGORIES</h2>
  <br>
  <% @categories.each do |category| %>
    <div class="category-item d-flex gap-3 border border-2 rounded-2 p-3 mb-3 align-items-center">
 <div style="width: 50px; height: 50px;">
 <%= image_tag category.icon, alt: "Category Icon", class: "img-fluid", style: "max-width: 40px; max-height: 40px;" %> 
      </div> 
      <div class="d-flex flex-fill justify-content-between">
        <div>
          <%= category.name%>
        </div>
        <div class="fw-bold">
          $<%= category.transaction_entries.sum(:amount) %>
        </div>
      </div>
    </div>
  <% end %>
  <br>
  <div class="d-grid">
    <%= link_to 'Add a New Category', new_category_path, class: 'btn btn-primary w-100' %>
  </div>
</section>
