<br>
<h2 class="text-center">Add new category</h2>
<%= form_with model: @category do |f| %>
  <div class="mx-3">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control'%>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="mx-3">
    <%= f.label :icon %>
    <%= f.text_field :icon, autofocus: true, autocomplete: 'icon', class: 'form-control'%>
    <% @category.errors.full_messages_for(:icon).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="d-grid mx-3">
    <%= f.submit 'Save', class: "btn btn-primary w-100" %>
  </div>
  <br>
<% end %>

<div class="d-grid mx-3">
  <%= link_to 'Back', categories_path, class: 'btn btn-secondary w-100' %>
</div>